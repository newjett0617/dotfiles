[alias]
	### add ###
	ad = add
	adp = add --patch

	### branch ###
	br = branch
	bra = branch --all
	brd = branch --delete
	brD = branch --delete --force
	brm = branch --move

	### commit ###
	ci = commit
	cia = commit --amend
	ciano = commit --amend --no-edit
	cim = commit --message

	### checkout ###
	co = checkout
	cod = checkout develop
	com = checkout master
	cos = checkout stage
	cob = checkout -b
	cop = checkout --patch

	### cherry-pick ###
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue

	### diff ###
	df = diff
	dfc = diff --cached

	### fetch ###
	sync = fetch --prune

	### log ###
	l = log --oneline --graph
	la = log --oneline --graph --all

	### ls-files ###
	ls = ls-files --exclude-standard --others
	lsg = ls-files --ignored --exclude-standard --others

	### pull ###
	pl = pull

	### push ###
	ps = push
	psf = push --force

	### rebase ###
	rb = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase --interactive

	### shortlog ###
	contributors = shortlog --summary --numbered

	### status ###
	st = status
	ss = status --short

	w = whatchanged
